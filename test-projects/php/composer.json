{
    "name": "example/php-sample-app",
    "description": "Sample PHP application for testing dx-cli",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-redis": "*",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "illuminate/database": "^10.19",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "lint": "phpcs",
        "analyze": "phpstan analyze"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable"
}